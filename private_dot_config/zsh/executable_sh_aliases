#!/bin/zsh

# Aliases for zsh
# listing aliases
alias ls='ls --color=auto'
alias ll='ls -al'

# save my ass
alias rm='rm -i'

# all t-s go to tmux
alias t="tmux a"
alias T="tmux"

# all v-s go to the nvim
alias v='nvim'
alias vi='v'
alias vim='v'
alias V="v ."

# and all e-s go to the emacs
alias e="emacsclient -c -a 'emacs'"
alias em="e"
alias emacs="e"

# github stuff {{{
alias gs="git status"
alias gu="git add -u"
# }}}
